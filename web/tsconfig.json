{
  "compilerOptions": {
    "rootDir": "./typescript/",
    "outDir": "./",

    "module": "esnext",
    "target": "ESNext",
    "types": [],

    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": ["./typescript/**/*"],
  "exclude": ["node_modules"]
}
